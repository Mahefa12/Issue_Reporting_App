@model IssuesReportingWeb.Controllers.IdeasController.IdeasCreateViewModel
@{
    ViewData["Title"] = "Submit Idea";
}

<div class="page-header">
    <h1>Submit an Improvement Idea</h1>
    <a class="btn btn-outline-secondary" asp-controller="Ideas" asp-action="Index">Back to list</a>
    </div>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-controller="Ideas" asp-action="Create">
            <div class="mb-3">
                <label class="form-label" asp-for="Input.Title"></label>
                <input class="form-control" asp-for="Input.Title" />
                <span class="text-danger" asp-validation-for="Input.Title"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Input.Description"></label>
                <textarea class="form-control" asp-for="Input.Description" rows="5"></textarea>
                <span class="text-danger" asp-validation-for="Input.Description"></span>
            </div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label" asp-for="Input.Category">Category <span class="text-danger">*</span></label>
                    <select class="form-select" asp-for="Input.Category" required>
                        <option value="" disabled selected>Select a category</option>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="Input.Category"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="Input.SubmittedBy"></label>
                    <input class="form-control" asp-for="Input.SubmittedBy" />
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Submit Idea</button>
                <a class="btn btn-secondary" asp-controller="Ideas" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>