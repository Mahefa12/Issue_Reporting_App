@model IssuesReportingWeb.Controllers.AdminController.EventsManageViewModel
@{
    ViewData["Title"] = "Manage Events & Announcements";
}

<div class="container mt-4">
    <div class="page-header d-flex align-items-center justify-content-between">
        <h2>Manage Events & Announcements</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-secondary" asp-controller="Admin" asp-action="Events">Back</a>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="EventsAdd">Add New</a>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Summary</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <span class="chip ok">Upcoming @Model.UpcomingCount</span>
                        <span class="chip warn">Ongoing @Model.OngoingCount</span>
                        <span class="chip">Completed @Model.CompletedCount</span>
                        <span class="chip">Announcements @Model.AnnouncementsCount</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Actions</h5>
                    <p class="text-muted">Update or delete events and announcements.</p>
                    <form method="post" asp-controller="Admin" asp-action="DeleteEvent" class="d-flex gap-2">
                        <input class="form-control" type="number" name="id" placeholder="Event ID" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title">All Events & Announcements</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Location</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.Events)
                        {
                            <tr>
                                <td>@e.Id</td>
                                <td>@e.Title</td>
                                <td>@e.Category</td>
                                <td>@e.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@e.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@e.Location</td>
                                <td>@(e.IsAnnouncement ? "Announcement" : "Event")</td>
                                <td>
                                    <form method="post" asp-controller="Admin" asp-action="DeleteEvent">
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>