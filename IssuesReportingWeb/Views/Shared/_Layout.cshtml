@{
    var title = ViewData["Title"] as string ?? "Issues Reporting Web";
    var currentController = ViewContext?.RouteData?.Values["controller"] as string ?? string.Empty;
    var currentAction = ViewContext?.RouteData?.Values["action"] as string ?? string.Empty;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzwJjQ0h2Ff3y2Rg5PeKk5t5qD8mYpHf6B9q3Q" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/bootstrap-lite.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header class="mb-4">
        <nav class="navbar navbar-light bg-light shadow-sm">
            <div class="container-fluid px-3 px-md-4">
                <div class="header-bar w-100 py-2">
                    <div class="d-flex align-items-center gap-3 header-center" id="quickActions">
                        <a class="nav-link" asp-controller="Issues" asp-action="Index">Report Issues</a>
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Local Events &amp; Announcements</a>
                        <a class="nav-link" asp-controller="ServiceRequests" asp-action="Index">Check Service Requests Status</a>
                        <span class="vr mx-1"></span>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- Admin auth is Razor Pages-based originally; wire up MVC later -->
                            <a class="nav-link" href="/Admin/Logout">Logout</a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Admin/Login">Admin Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <div id="topProgress" class="top-progress" aria-hidden="true"></div>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <nav class="bottom-nav" role="navigation" aria-label="Primary">
        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
        {
            <a class="bottom-link @(currentController == "Admin" && currentAction == "Index" ? "active" : null)" href="/Admin/Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-6 9 6v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><path d="M9 22V12h6v10"/></svg>
                <span>Dashboard</span>
            </a>
            <a class="bottom-link @(currentController == "Admin" && currentAction == "Requests" ? "active" : null)" href="/Admin/Requests">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                <span>Requests</span>
            </a>
            <a class="bottom-link @(currentController == "Admin" && currentAction == "Events" ? "active" : null)" href="/Admin/Events">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/><circle cx="8.5" cy="14.5" r="1.5"/><path d="M12 14h6"/></svg>
                <span>Events</span>
            </a>
            <a class="bottom-link @(currentController == "Admin" && currentAction == "Ideas" ? "active" : null)" href="/Admin/Ideas">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a7 7 0 0 0-7 7c0 2.6 1.6 4.9 3.9 6 .3.2.6.5.8.8L10 18h4l.3-.2c.2-.3.5-.6.8-.8 2.3-1.1 3.9-3.4 3.9-6a7 7 0 0 0-7-7z"/></svg>
                <span>Ideas</span>
            </a>
        }
        else
        {
            <a class="bottom-link @(currentController == "Home" && currentAction == "Index" ? "active" : null)" asp-controller="Home" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-6 9 6v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><path d="M9 22V12h6v10"/></svg>
                <span>Home</span>
            </a>
            <a class="bottom-link @(currentController == "Events" && currentAction == "Index" ? "active" : null)" asp-controller="Events" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                <span>Events</span>
            </a>
            <a class="bottom-link @(currentController == "Issues" && currentAction == "Index" ? "active" : null)" asp-controller="Issues" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                <span>Reports</span>
            </a>
            <a class="bottom-link @(currentController == "Ideas" && currentAction == "Index" ? "active" : null)" asp-controller="Ideas" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a7 7 0 0 0-7 7c0 2.6 1.6 4.9 3.9 6 .3.2.6.5.8.8L10 18h4l.3-.2c.2-.3.5-.6.8-.8 2.3-1.1 3.9-3.4 3.9-6a7 7 0 0 0-7-7z"/></svg>
                <span>Ideas</span>
            </a>
            <a class="bottom-link @(currentController == "ServiceRequests" && currentAction == "Index" ? "active" : null)" asp-controller="ServiceRequests" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="7"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
                <span>Track</span>
            </a>
        }
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jvY8QdWUE00QK4" crossorigin="anonymous"></script>
    <script>
        (function(){
          const progress = document.getElementById('topProgress');
          document.querySelectorAll('a').forEach(a => {
            a.addEventListener('click', () => {
              if (a.getAttribute('target') === '_blank') return;
              progress.classList.add('show');
            });
          });
          window.addEventListener('load', () => progress.classList.remove('show'));
        })();
    </script>
</body>
</html>
