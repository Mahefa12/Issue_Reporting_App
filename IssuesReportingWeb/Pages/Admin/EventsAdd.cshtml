@page
@model IssuesReportingWeb.Pages.Admin.EventsAddModel
@{
    ViewData["Title"] = "Add Events or Announcements";
}

<div class="container-fluid mt-4 admin-events-add">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Add Events / Announcements</h2>
        <a class="btn btn-secondary" asp-page="/Admin/Index">Back to Hub</a>
    </div>

<div class="row justify-content-center g-5">
        <div class="col-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Add Event</h5>
                    <form method="post" asp-page-handler="AddEvent" class="mt-2 form-narrow">
                        <div class="mb-2">
                            <label asp-for="NewEvent.Title" class="form-label"></label>
                            <input asp-for="NewEvent.Title" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="NewEvent.Description" class="form-label"></label>
                            <textarea asp-for="NewEvent.Description" class="form-control"></textarea>
                        </div>
                        <div class="form-grid-4">
                            <div>
                                <label asp-for="NewEvent.StartDateDate" class="form-label">Start Date (optional)</label>
                                <input asp-for="NewEvent.StartDateDate" type="date" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.StartDateTime" class="form-label">Start Time (optional)</label>
                                <input asp-for="NewEvent.StartDateTime" type="time" step="60" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.EndDateDate" class="form-label">End Date (optional)</label>
                                <input asp-for="NewEvent.EndDateDate" type="date" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.EndDateTime" class="form-label">End Time (optional)</label>
                                <input asp-for="NewEvent.EndDateTime" type="time" step="60" class="form-control" />
                            </div>
                        </div>
                        <div class="row g-2 mt-1">
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Location" class="form-label"></label>
                                <input asp-for="NewEvent.Location" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Category" class="form-label">Category</label>
                                <select asp-for="NewEvent.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
                            </div>
                        </div>
                        <div class="row g-2 mt-1">
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Organizer" class="form-label"></label>
                                <input asp-for="NewEvent.Organizer" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Priority" class="form-label"></label>
                                <input asp-for="NewEvent.Priority" type="number" min="1" max="3" class="form-control" />
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Add Event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Add Announcement</h5>
                    <form method="post" asp-page-handler="AddAnnouncement" class="mt-2 form-narrow">
                        <div class="mb-2">
                            <label asp-for="NewEvent.Title" class="form-label"></label>
                            <input asp-for="NewEvent.Title" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="NewEvent.Description" class="form-label"></label>
                            <textarea asp-for="NewEvent.Description" class="form-control"></textarea>
                        </div>
                        <div class="form-grid-4">
                            <div>
                                <label asp-for="NewEvent.StartDateDate" class="form-label">Start Date (optional)</label>
                                <input asp-for="NewEvent.StartDateDate" type="date" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.StartDateTime" class="form-label">Start Time (optional)</label>
                                <input asp-for="NewEvent.StartDateTime" type="time" step="60" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.EndDateDate" class="form-label">End Date (optional)</label>
                                <input asp-for="NewEvent.EndDateDate" type="date" class="form-control" />
                            </div>
                            <div>
                                <label asp-for="NewEvent.EndDateTime" class="form-label">End Time (optional)</label>
                                <input asp-for="NewEvent.EndDateTime" type="time" step="60" class="form-control" />
                            </div>
                        </div>
                        <div class="row g-2 mt-1">
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Location" class="form-label"></label>
                                <input asp-for="NewEvent.Location" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Category" class="form-label">Category</label>
                                <select asp-for="NewEvent.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
                            </div>
                        </div>
                        <div class="row g-2 mt-1">
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Organizer" class="form-label"></label>
                                <input asp-for="NewEvent.Organizer" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NewEvent.Priority" class="form-label"></label>
                                <input asp-for="NewEvent.Priority" type="number" min="1" max="3" class="form-control" />
                            </div>
                        </div>
                        <input type="hidden" name="NewEvent.IsAnnouncement" value="true" />
                        <div class="mt-3 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Add Announcement</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>