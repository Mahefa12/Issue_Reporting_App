@page
@model IssuesReportingWeb.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="page-header">
        <div>
            <h2>Admin Dashboard</h2>
            <p class="text-muted mb-0">Choose a section to manage.</p>
        </div>
        <div>
            <a class="btn btn-outline-secondary" asp-page="/Admin/EventsAdd">Add Event</a>
            <a class="btn btn-outline-secondary" asp-page="/Admin/Requests">Manage Requests</a>
            <a class="btn btn-outline-secondary" asp-page="/Admin/EventsManage">Manage Events</a>
        </div>
    </div>

    <div class="row row-cols-1 g-4 mt-3">
        <div class="col">
            <div class="card shadow-sm h-100 dashboard-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Events & Announcements</h5>
                    <p class="card-text">Create, view, and delete local events or announcements.</p>
                    <div class="metrics d-flex flex-wrap gap-2 mb-2">
                        <span class="chip ok">Upcoming @Model.EventsUpcoming</span>
                        <span class="chip warn">Announcements @Model.EventsAnnouncements</span>
                    </div>
                    <a class="btn btn-primary" asp-page="/Admin/Events">Open</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100 dashboard-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Requests / Reports</h5>
                    <p class="card-text">Update statuses and delete completed requests/reports.</p>
                    <div class="metrics d-flex flex-wrap gap-2 mb-2">
                        <span class="chip">In Progress @Model.RequestsInProgress</span>
                        <span class="chip ok">Completed @Model.RequestsCompleted</span>
                    </div>
                    <a class="btn btn-primary" asp-page="/Admin/Requests">Open</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100 dashboard-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Submitted Ideas</h5>
                    <p class="card-text">Accept or reject improvement ideas submitted by users.</p>
                    <div class="metrics d-flex flex-wrap gap-2 mb-2">
                        <span class="chip warn">Submitted @Model.IdeasSubmitted</span>
                        <span class="chip ok">Accepted @Model.IdeasAccepted</span>
                    </div>
                    <a class="btn btn-primary" asp-page="/Admin/Ideas">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>